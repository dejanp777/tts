VITE_API_BASE_URL=http://localhost:4000

# Phase 1: Voice AI Improvements
VITE_MAX_SILENCE_MS=1500
VITE_MIN_SILENCE_MS=500
VITE_ENABLE_DUCKING=true
VITE_ENABLE_BARGE_IN=true
VITE_ENABLE_FULL_DUPLEX=true
VITE_DUCK_VOLUME=0.15
VITE_ENABLE_CHAT_STREAM=true
VITE_ENABLE_TTS_STREAM=true

# Speculative Generation (reduces latency by 30-50%)
VITE_ENABLE_SPECULATIVE_GEN=false

# Chunked Response Delivery (breaks long responses into natural chunks)
VITE_ENABLE_CHUNKED_DELIVERY=false

# Phase 2: Turn-Taking System
VITE_ENABLE_TURN_PREDICTION=true
ENABLE_TURNGPT=true
ENABLE_VAP=true
TURNGPT_THRESHOLD=0.7
VAP_THRESHOLD=0.7
VITE_FUSION_THRESHOLD=0.7
FUSION_TEXT_WEIGHT=0.6

# ========================================
# TODO2.MD: Natural Conversational Flow
# ========================================

# Phase 1 (C): Interruption Intent + Pause/Resume Semantics
VITE_ENABLE_INTERRUPT_INTENT=false
VITE_ENABLE_PAUSE_RESUME=false
VITE_MIN_CONTROL_UTTERANCE_MS=300
VITE_MIN_CONTROL_SILENCE_MS=200

# Phase 2 (A): Speak-While-Generating (Stream LLM → Chunk → TTS)
VITE_ENABLE_SPEAK_WHILE_GENERATING=false
VITE_SPEECH_CHUNK_MIN_CHARS=60
VITE_SPEECH_CHUNK_MAX_CHARS=220
VITE_SPEECH_CHUNK_FORCE_AFTER_MS=1800

# Phase 3 (B): Assistant Backchannels While User Speaks
VITE_ENABLE_ASSISTANT_BACKCHANNELS=false
VITE_ASSISTANT_BACKCHANNEL_MIN_USER_SPEECH_MS=1800
VITE_ASSISTANT_BACKCHANNEL_MIN_INTERVAL_MS=8000
VITE_ASSISTANT_BACKCHANNEL_VOLUME=0.20
